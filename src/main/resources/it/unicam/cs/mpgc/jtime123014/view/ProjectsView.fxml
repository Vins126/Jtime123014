<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="it.unicam.cs.mpgc.jtime123014.controller.ProjectsController"
      spacing="10" style="-fx-padding: 20;">

    <HBox alignment="CENTER_LEFT" spacing="20">
        <Label text="Gestione Progetti" styleClass="header-label"/>
        <Region HBox.hgrow="ALWAYS" />
        <Button text="+ Nuovo Progetto" onAction="#handleAddProject" styleClass="action-button"/>
    </HBox>

    <ListView fx:id="projectsList" VBox.vgrow="ALWAYS"/>

</VBox>
